<UserControl
    x:Class="Transition.CircuitEditor.Components.Potentiometer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Transition.CircuitEditor.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:customcontrols="using:Transition.CustomControls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="SchematicComponentLayout">
            <Canvas Width="80" Height="120">
                <ContentControl ContentTemplate="{StaticResource symbolPotentiometer}"/>
            </Canvas>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="4" Text="Component Name: "/>
            <TextBox Margin="4" Text="{x:Bind ComponentName, Mode=TwoWay}"/>
        </StackPanel>
        <controls:Expander Header="Potentiometer total Resistance and position"
                           IsExpanded="True" ExpandDirection="Down" HorizontalContentAlignment="Stretch">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                <customcontrols:ComponentValueBox Unit="Ohm" HorizontalAlignment="Left"
                                 UnitShort="Ω" ValueChanged="changeR" Margin="4"
                                         x:Name="componentValueBox"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Position:" Grid.Column="0"
                                   HorizontalAlignment="Right" Margin="4"
                                   VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1"
                                HorizontalAlignment="Stretch">
                        <TextBlock Text="CCW" Margin="4" VerticalAlignment="Center"/>
                        <Slider Margin="4" ValueChanged="positionChange"
                                VerticalAlignment="Center" x:Name="sldPosition"
                                Value="0" TickFrequency="0.1" Width="150"/>
                        <TextBlock Text="CW" Margin="4" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Content="CCW" Margin="4" Grid.Column="0"
                                HorizontalAlignment="Center" Click="ClickCCW"/>
                    <Button Content="Center" Margin="4" Grid.Column="1"
                                HorizontalAlignment="Center" Click="ClickCenter"/>
                    <Button Content="CW" Margin="4" Grid.Column="2" 
                                HorizontalAlignment="Center" Click="ClickCW"/>
                    <TextBox Grid.Column="3"  Width="50"
                                 Style="{StaticResource EngrNumberBoxStyle}"
                                 Text="{Binding Path=Value, ElementName=sldPosition, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>
        </controls:Expander>
       
    </StackPanel>
</UserControl>
