<UserControl
    x:Class="Easycoustics.Transition.CustomControls.EngrNumberBoxDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Easycoustics.Transition"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <UserControl.Resources>
        <local:EngrConverter x:Key="engrConverter"/>
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
        <TextBlock VerticalAlignment="Center"
                   Text="{x:Bind VariableName, Mode=OneWay}"
                   HorizontalAlignment="Right"/>
        <TextBox Style="{StaticResource EngrNumberBoxStyle}"
                 Text="{x:Bind Value, Mode=OneWay, Converter={StaticResource engrConverter}}" 
                 Margin="4,4,0,4" IsReadOnly="True"
                 Width="100"/>
        <Button Content="..." Click="changeValue" Margin="0,4,4,4"/>
        <TextBlock VerticalAlignment="Center" Margin="4" Width="20"
                   Text="{x:Bind UnitShort, Mode=OneWay}"/>
    </StackPanel>
</UserControl>
